{% extends 'base.html.twig' %}
{% block title %}updateProducto{% endblock %}
{% block body %}
    <h2>Actualiza Producto</h2>
    <div>

    <form method="post" action="{{ action }}" novalidate="novalidate">
        <div>
            <!--  {{ dump(form.vars.value) }} muetra todos los campos del form -->
        </div>
        <ul>
            {% for error in form.vars.errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
        <input type="hidden" value="id" name="id">
        <div>{{ form_label(form.name) }}:{{ form_widget(form.name) }}</div>
        <div>{{ form_label(form.price) }}:{{ form_widget(form.price) }}</div>
        <div>{{ form_label(form.description) }}:{{ form_widget(form.description) }}</div>
        <div>{{ form_label(form.talla) }}:{{ form_widget(form.talla) }}</div>

        <div><input type="submit" value="ok"></div>
    </form>
    <a href="{{ path('app') }}" name="volver">Volver al Men√∫</a>
    </div>

{% endblock %}